@model NacionalLibrary_Application.Models.BookModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Book";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create Book</h4>
                </div>

                <div class="card-body">

                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Synopsis</label>
                            <textarea asp-for="Synopsis" class="form-control" placeholder="Enter book synopsis" rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="Synopsis"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Page Count</label>
                            <input asp-for="PageCount" type="number" class="form-control" placeholder="Number of pages" />
                            <span class="text-danger" asp-validation-for="PageCount"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Editorials</label>
                            <select asp-for="EditorialId" class="form-select">
                                <option value="">-- Select Editorial --</option>
                                @foreach (var editorial in ViewBag.Editorials)
                                {
                                    <option value="@editorial.Id">@editorial.Name</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="EditorialId"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Authors</label>
                            <select asp-for="SelectedAuthorIds" class="form-select" multiple>
                                @foreach (var author in ViewBag.Authors)
                                {
                                    <option value="@author.Id">@author.FullName</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="SelectedAuthorIds"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="/Books" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>

                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create Book
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}