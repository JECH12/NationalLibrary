@model NacionalLibrary_Application.Models.EditorialModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Editorial";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create Editorial</h4>
                </div>

                <div class="card-body">

                    <form asp-action="Create" method="post">

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter editorial name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Headquarters</label>
                            <input asp-for="Headquarters" class="form-control" placeholder="Enter headquarters location" />
                            <span class="text-danger" asp-validation-for="Headquarters"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="/Editorials" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>

                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create Editorial
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}